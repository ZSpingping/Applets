.professionaltitle{
  width:90%;
  margin:0 auto;
  color:rgb(0, 128, 128);
  padding:10px 0;
  border-bottom:1px solid #dadada;
  position:relative;
}
.professionaltitle>view{
  position:absolute;
  width:90px;
  height:3px;
  background:rgb(0, 128, 128);
  bottom:-2px;
}
.professionallist{
  font-size:14px;
  text-align: center;
  line-height: 18px;
  padding:20px 0;
}
.professionallist>swiper{
  background:url(http://www.zengdexing.cn/images/3.png);
  height:200px;
}
.professionala{
  background-image: url(http://www.zengdexing.cn/images/16.png);
}
.professionallist>text{
  padding:6px 0;
  display:block;
}
.professionalhttp{
  color:blue;
  font-size:16px;
}
.professionallist>image{
  width:200px;
  height:200px;
  display: inlie-block;
