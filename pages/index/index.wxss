.contaibox{
  background:url(http://www.zengdexing.cn/images/counter-bg.jpg);
  background-size:cover;
  padding:140px 0;
  background-attachment:fixed;
}
.contaihead{
  text-align: center;
  color:#fff;
  overflow:hidden;
  background:rgba(0,0,0,0.7);
  padding:10px 0;
  line-height: 24px;
}
