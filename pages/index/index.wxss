  width:160px;
  height:160px;
}
.contaiheadright>text:nth-child(1){
  font-size:20px;
}
.contaiheadright>text:nth-child(2){
  color:green;
  font-size:16px;
  text-align: left;
}
.contaiheadright>text{
  font-size:14px;
